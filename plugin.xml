<?xml version='1.0' encoding='utf-8'?>
<plugin id="cordova-plugin-autoupdate" version="0.0.2" xmlns="http://apache.org/cordova/ns/plugins/1.0" xmlns:android="http://schemas.android.com/apk/res/android">
    <name>AutoUpdate</name>
    <js-module name="AutoUpdate" src="www/AutoUpdate.js">
        <clobbers target="AutoUpdate" />
    </js-module>
    <platform name="android">
        <config-file parent="/*" target="res/xml/config.xml">
            <feature name="AutoUpdate">
                <param name="android-package" value="cordova.plugin.autoupdate.AutoUpdate" />
            </feature>
        </config-file>
        <config-file parent="/*" target="AndroidManifest.xml"></config-file>
        <source-file src="src/android/AutoUpdate.java" target-dir="src/cordova/plugin/autoupdate/AutoUpdate" />
        <framework src="src/android/build.gradle" custom="true" type="gradleReference"/>
    </platform>
</plugin>